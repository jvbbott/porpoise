        <form class="form-horizontal" role="form" method="post" action="/post-create-profile">
          
          <div class="form-group">
            <div class="btn-group text-center col-xs-12 account-type" role="group" aria-label="...">
              <button id="student" type="button" class="btn btn-3 btn-default btn-selected col-xs-4">Student</button>
              <button id="teacher" type="button" class="btn btn-3 btn-default col-cs-4">Teacher</button>
              <button id="professional" type="button" class="btn btn-3 btn-default col-xs-4">Professional</button>
            </div>

          </div>

          <div class="form-group student teacher professional">
            <div class="col-xs-12">
            <label for="account" class="control-label">Account</label>
            </div>
              
            <div class="col-xs-12">
              <input type="text" class="form-control" name="username" id="username" placeholder="Username" value="{{username}}">
            </div>
            <div class="col-xs-12">
              <input type="password" class="form-control" name="password" id="password" placeholder="Password" value="">
            </div>
          </div>

            <div class="form-group optional student">
              <div class="col-xs-12">
                <input type="text" class="form-control" name="section_code" id="section_code" placeholder="Section Code">
              </div>
          </div>
         





          <div class="form-group optional teacher professional" style="display:none;">
            <div class="col-xs-12">
            <label for="email" class="control-label">How do we contact you?</label>
          </div>
              
            <div class="col-xs-12">
              <input type="text" class="form-control" name="email" id="email" placeholder="Email">
            </div>
          </div>

          <div class="form-group optional student teacher professional">
            <div class="col-xs-12">
            <label for="name" class="control-label">Who are you?</label>
            </div>
              
            <div class="col-xs-12">
              <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name">
            </div>

            <div class=" col-xs-12">
              <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Last Name">
            </div>
          </div>

            <div class="form-group optional teacher professional"  style="display:none;">
            <div class=" col-xs-12">
              <input type="text" class="form-control" name="city" id="city" placeholder="City">
            </div>
            <div class=" col-xs-12">
              <input type="text" class="form-control" name="state" id="state" placeholder="State">
            </div>
            </div>
        


          <div class="form-group optional professional"  style="display:none;">
            <div class="col-xs-12">
               <label for="other" class="control-label">Occupation</label>
             </div>

             <div class="col-xs-12">
              <input type="text" id="company" class="form-control" name="company" placeholder="Current Company">
            </div>

            <div class="col-xs-12">
              <input type="text" id="career" class="form-control" name="career" placeholder="Career">
            </div>


          </div>

        
  
         <div class="form-group">
                <div class="col-xs-12">
                  <button type="submit" class="btn btn-1 take-med-action">Create Profile</button>
          </div>
      </div>

    </form> 

